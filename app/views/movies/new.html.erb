<%#<script src="movie.js" defer></script>%>
<div class="box">
  <div class="box-inner">
    <h3>投稿する</h3>
    <%= form_with(model: @movie, local: true) do |f| %>
    
    <div class="box-title">
      <%= f.label :タイトル %><br />
      <%= f.text_field :title, class:"title", autofocus: true, autocomplete: "title" %>
      </div>

      <div class="box-genre">  
      <%= f.label :ジャンル %><br />
      <%= f.collection_select(:genre_id, Genre.all, :id, :name, {}, {class:"genre-select"}) %>
      </div>

      <div class="box-image">
      <%= f.label :画像 %><br />
      <%= f.file_field :image, class:"image", id:"movie-image" %>
      </div>

      <div class="box-phrase">
      <%= f.label :キャッチフレーズ %><br />
      <%= f.text_field :phrase, class:"phrase", placeholder: "", autocomplete: "phrase" %>
      </div>

      <div class="box-text">
      <%= f.label :感想 %><br />
      <%= f.text_area :text, class:"text", placeholder:"" %>
      </div>

      
       <div class="box-send" id ="test">
      <%= f.submit "保存する" %>
      </div>
    <% end %>
<div class="movie-newser">
<p><span>---</span> 戻りますか？ <span>---</span></p>
<%=link_to 'もどる', root_path, class:"back-btn" %>
  </div>


  </div>
</div>
<div class="boxbox">
</div>